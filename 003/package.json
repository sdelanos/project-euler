{
  "name": "project-euler-003",
  "version": "1.0.0",
  "description": "Project Euler #003",
  "main": "index.js",
  "author": "Sebastien Delanos",
  "license": "MIT",
  "scripts": {
    "start": "npm run build && node ./build/index.js",
    "dev": "nodemon",
    "build": "rimraf ./build && tsc",
    "build-watch": "rimraf ./build && tsc -w",
    "test": "jest",
    "lint": "eslint . --ext .ts"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "nodemonConfig": {
    "watch": [
      "src",
      "test"
    ],
    "ext": "ts",
    "ignore": [
      "src/**/*.spec.ts"
    ],
    "exec": "ts-node ./src/index.ts"
  }
}
